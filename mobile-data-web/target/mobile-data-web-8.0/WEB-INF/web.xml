<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <display-name>Mobile-Data-Application</display-name>
    <listener>
        <listener-class>de.gfai.mobile.data.session.MobileDataSessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>QRCodeServlet</servlet-name>
        <servlet-class>de.gfai.mobile.data.servlet.QRCodeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SvgServlet</servlet-name>
        <servlet-class>de.gfai.mobile.data.servlet.RackSVGServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObjectInfoServlet</servlet-name>
        <servlet-class>de.gfai.mobile.data.servlet.ObjectInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetTypeServlet</servlet-name>
        <servlet-class>de.gfai.mobile.data.servlet.GetTypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QRCodeServlet</servlet-name>
        <url-pattern>/qrcode/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SvgServlet</servlet-name>
        <url-pattern>/svg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObjectInfoServlet</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthorizationServlet</servlet-name>
        <url-pattern>/connect</url-pattern>
    </servlet-mapping>
    <session-config>
    <session-timeout>-1</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/jsp/index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <location>/jsp/error.jsp</location>
    </error-page>
    <context-param>
        <description>Contact to send error reports.</description>
        <param-name>adminEmail</param-name>
        <param-value>infocable@gfai.de</param-value>
    </context-param>
</web-app>
